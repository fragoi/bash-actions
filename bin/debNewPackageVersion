#!/bin/bash -e
set -o pipefail

version_index=${DEB_VERSION_INDEX:-3}

version=$(debChangelogVersion)

if [ ! "$version" ]; then
  echo 1>&2 "cannot read version from changelog"
  exit 1
fi

version=$(nextVersionExt "$version" "$version_index")

fetchChangelog $version \
  | shortlog \
  | debChangelogEntryAdd "$version"

setGitIdentity

createTag "$version"
