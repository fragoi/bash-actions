#!/bin/bash

## Extends `version-file` and
## writes changes and version in 'debian/changelog'.

. version-file

cookVersion() {
  local version=$1
  local changelogVersion=$(debChangelogVersion)
  if [[ "$changelogVersion" = "$version" ]]; then
    echo 1>&2 "changelog version already up to date"
    return;
  fi
  debChangelogVersionNew "$version"
}
