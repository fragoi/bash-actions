#!/bin/bash -e

. setEnv
. sharedVars

ghRelease() {
  gh release create --verify-tag --notes-file - \
    --title "$version" \
    "$tag" \
    "$archive"
}

createVersion

getSharedVars NEW_VERSION

if [[ ! "$NEW_VERSION" ]]; then
  echo 1>&2 "No new version, nothing to do"
  exit
fi

version=$NEW_VERSION
tag=$(versionTagName "$version")
archive=$(releaseArchive "$version")

changelogCommits \
  | createChangelog \
  | ghRelease
