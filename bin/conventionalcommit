#!/bin/bash

. inputreader

logCommit() {
  local commit=$1
  local format=$2
  git log -1 --format="$format" "$commit" --
}

logRange() {
  local from=$1
  local to=$2
  git log --format=%H ${from:+"${from}.."}${to} --
}

subject() {
  while readline line && [ "$line" ]; do
    echo "$line"
  done
}

breakingChange() {
  local pattern='^BREAKING[ -]CHANGE: '
  while readline line; do
    if [[ "$line" =~ $pattern ]]; then
      line=${line:${#BASH_REMATCH[0]}}
      echo "$line"
      pattern='^[^[:space:]]+(: | #)'
      while readline line; do
        if [[ "$line" =~ $pattern ]]; then
          break
        fi
        echo "$line"
      done
      break
    fi
  done
}

parseCommitBody() {
  local prefix=${1:-'COMMIT_'}

  local -n type="${prefix}TYPE"
  local -n scope="${prefix}SCOPE"
  local -n break="${prefix}BREAK"
  local -n desc="${prefix}DESC"

  type=
  scope=
  break=
  desc=

  local subject=$(subject)

  local pattern='^([[:alpha:]]+)([(].+[)])?([!])?: '
  if [[ "$subject" =~ $pattern ]]; then
    subject=${subject:${#BASH_REMATCH[0]}}
    type=${BASH_REMATCH[1]}
    scope=${BASH_REMATCH[2]:1:-1}
    if [ "${BASH_REMATCH[3]}" ]; then
      break=$subject
    fi
  fi

  desc=$subject

  local breakingChange=$(breakingChange)
  if [ "$breakingChange" ]; then
    break=$breakingChange
  fi
}

parseCommit() {
  local commit=$1
  local prefix=$2
  parseCommitBody "$prefix" < <(logCommit "$commit" '%B')
}
