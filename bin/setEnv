#!/bin/bash

V_MAJOR=${V_MAJOR:-0}
V_MINOR=${V_MINOR:-1}
V_PATCH=${V_PATCH:-2}
V_FUNCS=${V_FUNCS:-"version-file"}

REMOTE=${REMOTE:-"origin"}
TAG_PREFIX=${TAG_PREFIX:-"v"}

GIT_USER_NAME=${GIT_USER_NAME:-"github-actions"}
GIT_USER_EMAIL=${GIT_USER_EMAIL:-"github-actions@github.com"}

CONV_COMMITS_PREFIX=${CONV_COMMITS_PREFIX:-"COMMITS_"}

SHARED_VARS_FILE=${SHARED_VARS_FILE:-".shared-vars"}

INCLUDE_FILES=${INCLUDE_FILES}
EXCLUDE_FILES=${EXCLUDE_FILES}
